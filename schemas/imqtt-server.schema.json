{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/iztiar/iztiar-core/schemas/imqtt-server.schema.json",
    "title": "IMqttServer",
    "description": "the configuration of the IMqttServer interface",
    "type": "object",
    "properties" : {
        "IMqttServer": {
            "type": "object",
            "description": "the configuration group, required to be present to try to run the IMqttServer",
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "the full URI of the broker"
                },
                "proto": {
                    "type": "string",
                    "description": "the MQTT preferred protocol",
                    "default": "mqtts"
                },
                "host": {
                    "type": "string",
                    "description": "the hostname to use to connect to this message bus",
                    "default": "localhost"
                },
                "port": {
                    "type": "integer",
                    "description": "the port number of the message bus",
                    "default": 24003
                },
                "certs": {
                    "type": "object",
                    "description": "list of managed X509 certificates",
                    "properties": {
                        "rootCA": {
                            "type": "string",
                            "description": "path (relative to storageDir) to the root CA certificate"
                        },
                        "server": {
                            "type": "object",
                            "description": "server key and certificate",
                            "properties": {
                                "cert": {
                                    "type": "string",
                                    "description": "path (relative to storageDir) to this server certificate in PEM format"
                                },
                                "key": {
                                    "type": "string",
                                    "description": "path (relative to storageDir) to this server private key in PEM format"
                                }
                            }
                        },
                        "clients": {
                            "type": "objects",
                            "description": "the allowed client",
                            "properties": {
                                "rootCA": {
                                    "type": "boolean",
                                    "description": "whether to accept all certificates signed by our rootCA",
                                    "default": "false"
                                },
                                "allowed": "array",
                                "description": "list of allowed X509 client certificates",
                                "properties": {
                                    "clientCA": "string",
                                    "description": "path (relative to storageDir) to the allowed client certificate"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
